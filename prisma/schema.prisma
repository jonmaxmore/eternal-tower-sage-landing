// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  ipAddress String?
  createdAt DateTime @default(now())
}

model Admin {
  id           String   @id @default(cuid())
  username     String   @unique
  passwordHash String
  createdAt    DateTime @default(now())
}

model SiteConfig {
  id                String   @id @default(cuid())
  themeColor        String   @default("#2563eb") // Default blue-600
  
  // Meta & General
  metaTitle         String   @default("Eternal Tower Saga - Pre-register Now")
  metaDescription   String   @default("Join the anime MMORPG adventure. Pre-register today for exclusive rewards!")
  isMaintenanceMode Boolean  @default(false)
  officialSiteUrl   String?
  faviconUrl        String?

  // Backgrounds
  heroBgUrl         String   @default("/images/p1-bg.webp")
  milestonesBgUrl   String   @default("/images/p2-bg.webp")

  // Images & Icons
  logoUrl           String   @default("/images/logo.svg")
  
  // Social Links/Icons
  socialFbUrl       String   @default("/images/fb-bt2.png")
  socialYtUrl       String   @default("/images/ytb-bt2.png")
  socialDsUrl       String   @default("/images/ds-bt2.png")

  // Buttons
  btnPreRegUrl      String   @default("/images/Btn-mail.png")
  btnDiscordUrl     String   @default("/images/Btn-dc.png")
  btnIosUrl         String   @default("/images/ios-btn.png")
  btnGoogleUrl      String   @default("/images/gg-btn.png")
  btnWindowsUrl     String   @default("/images/win-btn.png")

  updatedAt         DateTime @updatedAt
}

model Navigation {
  id       String  @id @default(cuid())
  label    String
  url      String
  order    Int     @default(0)
  isActive Boolean @default(true)
}

model VisitLog {
  id        String   @id @default(cuid())
  path      String
  ipAddress String?
  createdAt DateTime @default(now())
}
